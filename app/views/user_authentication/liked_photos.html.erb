<h1><%= @the_user.username %></h1>

<dl>
  <dt>Private</dt>
  <dd><%= @the_user.private %></dd>

  <dt>Followers</dt>
  <dd>
    
    <%= @list_of_followers.size() %>

  </dd>

  <dt>Following</dt>
  <dd><%= @list_of_following.size() %> </dd>

</dl>

<nav>
  <ul>
    <li>
      <a href="/users/<%= @the_user.username %>">Profile</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/feed">Feed</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/discover">Discover</a>
    </li>
  </ul>
</nav>

<h2>Own photos (<%= @list_of_likes.size() %>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th></th>
  </tr>

   <% @list_of_likes.each do |a_like| %>
  
  <tr>
    <td>
      <img src="<%= Photo.where(:id => a_like.photo_id).at(0).image  %>">
    </td>

    <td>
      <%= User.where(:id => Photo.where(:id => a_like.photo_id).at(0).owner_id).at(0).username  %>
    </td>

    <td>
      <%= Photo.where(:id => a_like.photo_id).at(0).caption  %>
    </td>

    <td>
      <%= time_ago_in_words(Photo.where(:id => a_like.photo_id).at(0).created_at) %> ago
    </td>

    <td>
      <%= Photo.where(:id => a_like.photo_id).at(0).likes_count  %>
    </td>

    <td>
      <a href="/photos/<%= Photo.where(:id => a_like.photo_id).at(0).id  %>">
        Show details
      </a>
    </td>
  </tr>
  
  <% end %>
</table>